---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row text-sm">
      <span class="text-skin-muted">
        Theme by <a href="https://github.com/steipete" target="_blank" rel="noopener noreferrer" class="hover:text-accent underline">@steipete</a>
        · 
        <a href="https://github.com/carluve/carluve.dev" target="_blank" rel="noopener noreferrer" class="hover:text-accent">Source</a>
        · CC BY 4.0
      </span>
    </div>
  </div>
</footer>
