---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Carlos Luengo Vera",
      url: "https://carlosluengo.com/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Carlos Luengo Vera",
      logo: {
        "@type": "ImageObject",
        url: "https://carlosluengo.com/avatar-carlos.png",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://carlosluengo.com/avatar-carlos.png",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Carlos Luengo Vera",
    url: "https://carlosluengo.com",
    image: "https://carlosluengo.com/avatar-carlos.png",
    sameAs: [
      "https://github.com/carluve",
      "https://twitter.com/carluve",
      "https://linkedin.com/in/carlosluengo",
    ],
    jobTitle: "PhD Candidate & AI Researcher",
    description:
      "PhD Candidate, AI researcher, and technology consultant. Exploring how Generative AI transforms education and work.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Carlos Luengo",
    url: "https://carlosluengo.com",
    description:
      "PhD Candidate, AI researcher, and technology consultant. Blog about AI, productivity, and real-world use cases.",
    author: {
      "@type": "Person",
      name: "Carlos Luengo Vera",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://carlosluengo.com/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />